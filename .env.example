# ==================== API KEYS ====================
# Required: At least one of these for LLM
# GOOGLE_API_KEY=your-google-api-key-here
# GEMINI_API_KEY=your-gemini-api-key-here

# Optional: For Google Cloud Speech-to-Text (Streaming)
# Set path to your service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ==================== MODEL CONFIGURATION ====================

# Batch Pipeline (test.py, run_advanced_analysis.py)
# Uses slower, more accurate model for post-call analysis
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MODEL_DEEP=gemini-1.5-pro

# Streaming Pipeline (stream_processor.py)
# Uses faster model for real-time analysis
GEMINI_MODEL_FAST=gemini-2.5-flash

# Whisper model for batch STT (base.en, small.en, medium.en, large)
WHISPER_MODEL=base.en

# ==================== STREAMING CONFIGURATION ====================

# Audio chunk duration in milliseconds (1000 = 1 second)
STREAMING_CHUNK_DURATION_MS=1000

# Sample rate for streaming STT (16000 Hz recommended)
STREAMING_SAMPLE_RATE=16000

# Language for STT (en-US, es-ES, fr-FR, etc.)
STREAMING_STT_LANGUAGE=en-US

# WebSocket server settings
STREAMING_HOST=0.0.0.0
STREAMING_PORT=8765

# ==================== REAL-TIME ALERT THRESHOLDS ====================

# Trigger sentiment alert when score drops below this value (-1.0 to 1.0)
SENTIMENT_ALERT_THRESHOLD=-0.5

# Trigger silence alert after N seconds of no speech
SILENCE_ALERT_SECONDS=10.0

# ==================== NOISE DETECTION ====================

# Enable DeepFilterNet for ML-based noise detection
ENABLE_DEEPFILTERNET=true

# Save enhanced (noise-reduced) audio file
SAVE_ENHANCED_AUDIO=true

# ==================== ADVANCED ANALYSIS ====================

# Enable post-call issue tree analysis
ENABLE_ISSUE_TREE=true

# Enable call rating analysis
ENABLE_CALL_RATING=true

# ==================== LOGGING ====================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Save streaming metrics to file
SAVE_STREAMING_METRICS=false
